<h1 class="title">Task</h1>
<section id="add">
  <form action="/task" method="post" class="w-50 m-auto m-auto justify-content-center">
    <input class="form-control" name="content" placeholder="Enter the new task">
    <button type="submit" class="btn btn-primary add-task__button">Add task!</button>
    <span class="alert <%= 'visible' if @invalid%>">Please insert a valid value!</span>
  </form>
</section>

<div class="topnav">
  <a href="/complete" <%= "class='active'" if @complete_page %>>Complete task</a>
  <a href="/incomplete" <%= "class='active'" if @incomplete_page %>>Incomplete task</a>
</div>

<div class="task__container">
  <% @all_task.each do |task| %>
    <div class="task">
      <p>
        <%= task["title"]%>
      </p>
      <div class="buttons__container">
        <form action="/<%=task["id"]%>" method="post">
          <input name="_method" type="hidden" value="put" />
          <%if task["done"] == false%>
          <button type="submit" class="btn btn-primary">Complete task</button>
          <%end%>
        </form>

        <form action="/<%=task["id"]%>" method="post">
          <input name="_method" type="hidden" value="delete" />
          <button class="btn btn-danger" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  <% end %>
</div>
